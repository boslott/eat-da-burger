
<!-- Create a button that will submit the user input into the database -->
<div class="container">
  <div class="row main-title">
    <h1>Eat Da Burger!</h1>
  </div>
  <div class="row add-burger">
    <!-- <h2>Add Burger</h2> -->
    <form class="create-form">

      <div class="form-group">
        <label for="burName">New Burger:</label>
        <input type="text" id="burName" name="name">

      <button type="button" id="addBtn">Add Burger</button>
    </div>
    </form>
  </div>
  <div class="row">
    <div class="col-sm-6">  <!-- non-devoured burgers -->
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-partial devour=true}}
        {{/unless}}
      {{/each}}
    </div>
    <div class="col-sm-6">  <!-- devoured burgers -->
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-devoured}}
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>
